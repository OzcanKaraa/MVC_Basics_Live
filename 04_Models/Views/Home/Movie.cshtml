@model List<K07_Models.Models.Movie>

    @* Kullanacağım Modeli en tepede tanımlıyorum..*@


<h1>Film Listesi</h1>
<br />
<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Year</th>
    </tr>
    @foreach (var item in Model) // Yukarda tanımlamış olunan modeli kullanıyorum. Model olarak tanımlayarak...
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Year</td>
        </tr>
    }

</table>
